<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#64FFFFFF">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#3498DB" />
            <stroke
                android:width="1dp"
                android:color="#2874A6" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#3498DB"
                android:endColor="#2874A6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2874A6" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</ripple>